<%= form_for(stripe_subscription_form, url: onboard_path, method: :post, html: {id: "payment-form", class: "js-stripe-subscription-form", data: {step: "2"}}) do |f| %>
	<div class="form-row">
		<label for="card-element">
			Credit or debit card
		</label>
		<div id="card-element">
		<!-- A Stripe Element will be inserted here. -->
		</div>

		<!-- Used to display Element errors. -->
		<div id="js-stripe-subscription-form__errors" role="alert"></div>
	</div>

	<%= f.radio_button :subscription_type, "monthly", checked: true %>
	<%= f.label :subscription_type, "Monthly", value: "monthly" %>

	<%= f.radio_button :subscription_type, "yearly" %>
	<%= f.label :subscription_type, "Annual", value: "yearly" %>

	<div class="js-stripe-subscription-form__voucher-text">Have a promotional code?</div>
	<%= f.text_field :stripe_promotion, placeholder: "ABC123" %>

	<button>Submit Payment</button>
<% end %>